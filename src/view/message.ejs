<% if (message) { %>
    <div class="alert alert-success">
        <%= message %>
    </div>
    <% if (redirectTo) { %>
        <script>
            setTimeout(function () {
                window.location.href = "<%= redirectTo %>";
            }, 5000); // 5000 milliseconds = 5 seconds
        </script>
    <% } %>
<% } %>